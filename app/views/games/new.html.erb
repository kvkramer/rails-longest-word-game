<h1>New Longest Word Game</h1>

<div class="letters">
<p class="letter-box"> <% @letters.each do |letter| %>
      <%= letter %>
      <% end %>
</p>
</div>

<form action="/score" method=post>
  <input type="text" name="word" placeholder="Longest Word?">
  <input type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
